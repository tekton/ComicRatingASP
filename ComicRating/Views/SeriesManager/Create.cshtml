@model ComicRating.Models.Series

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Series</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.PublisherID, "publisher")
        </div>
        <div class="editor-field">
            @Html.DropDownList("PublisherID", String.Empty)
            @Html.ValidationMessageFor(model => model.PublisherID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.name)
            @Html.ValidationMessageFor(model => model.name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.max_issue)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.max_issue)
            @Html.ValidationMessageFor(model => model.max_issue)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.start_year)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.start_year)
            @Html.ValidationMessageFor(model => model.start_year)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.volume)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.volume)
            @Html.ValidationMessageFor(model => model.volume)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
