@model IEnumerable<ComicRating.Models.Issue>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            series
        </th>
        <th>
            title
        </th>
        <th>
            number
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.series.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.number)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IssueID }) |
            @Html.ActionLink("Details", "Details", new { id = item.IssueID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.IssueID })
        </td>
    </tr>
}

</table>
